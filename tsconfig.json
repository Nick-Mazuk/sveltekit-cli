{
    "strict": true,
    "alwaysStrict": true,
    "compilerOptions": {
        "target": "es5",
        "allowJs": true,
        "lib": ["DOM"],
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "./js",
        "declaration": true
    },
    "include": [
        "src/**/*.ts",
        "src/*.ts"
    ],
    "exclude": [
        "node_modules",
        "js**/*",
        "esm**/*"
    ]
}